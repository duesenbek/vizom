{
  "id": "user-funnel",
  "name": "User Conversion Funnel",
  "description": "Visualize user journey from signup to purchase",
  "library": "echarts",
  "chartType": "funnel",
  "tier": "pro",
  "thumbnail": "/assets/templates/user-funnel.png",
  "sampleData": {
    "labels": ["Website Visits", "Sign Ups", "Cart Adds", "Checkout", "Purchase"],
    "data": [100, 80, 60, 40, 20],
    "title": "User Conversion Funnel"
  },
  "config": {
    "title": {
      "text": "User Conversion Funnel",
      "left": "center",
      "textStyle": {
        "fontSize": 18,
        "fontWeight": 600,
        "color": "#1E293B"
      }
    },
    "tooltip": {
      "trigger": "item",
      "backgroundColor": "rgba(15, 23, 42, 0.9)",
      "textStyle": {
        "color": "#fff"
      },
      "formatter": "{b}: {c} ({d}%)"
    },
    "legend": {
      "orient": "vertical",
      "left": "left",
      "top": "middle",
      "textStyle": {
        "color": "#64748B"
      }
    },
    "color": ["#3B82F6", "#6366F1", "#8B5CF6", "#A855F7", "#D946EF"],
    "series": [
      {
        "type": "funnel",
        "left": "20%",
        "width": "60%",
        "top": 60,
        "bottom": 60,
        "min": 0,
        "max": 100,
        "minSize": "0%",
        "maxSize": "100%",
        "sort": "descending",
        "gap": 4,
        "label": {
          "show": true,
          "position": "inside",
          "formatter": "{b}\n{c}",
          "fontSize": 14,
          "color": "#fff"
        },
        "labelLine": {
          "show": false
        },
        "itemStyle": {
          "borderColor": "#fff",
          "borderWidth": 2
        },
        "emphasis": {
          "label": {
            "fontSize": 16
          },
          "itemStyle": {
            "shadowBlur": 10,
            "shadowOffsetX": 0,
            "shadowColor": "rgba(0, 0, 0, 0.3)"
          }
        }
      }
    ],
    "animationDuration": 1000,
    "animationEasing": "cubicOut"
  }
}
