# ===========================================
# API Configuration
# ===========================================
# DeepSeek API Configuration (NEVER expose client-side)
DEEPSEEK_API_KEY=sk-your-actual-deepseek-api-key-here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=4000
DEEPSEEK_TEMPERATURE=0.7
DEEPSEEK_TIMEOUT=30000

# ===========================================
# Server Configuration
# ===========================================
PORT=3000
NODE_ENV=production

# ===========================================
# CORS & Security
# ===========================================
# CORS Configuration (comma-separated domains for production)
CORS_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# JWT Secret for sessions
JWT_SECRET=your-super-secret-jwt-key-min-32-chars

# ===========================================
# Database & Storage
# ===========================================
# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ===========================================
# Authentication
# ===========================================
# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ===========================================
# Analytics & Tracking
# ===========================================
# Provider selection: plausible | umami | ga | none
VITE_ANALYTICS_PROVIDER=plausible
# Optional flag (client-side)
# VITE_ENABLE_ANALYTICS=true
# Google Analytics (optional)
GA_TRACKING_ID=G-XXXXXXXXXX

# Plausible Analytics (privacy-focused)
PLAUSIBLE_DOMAIN=your-domain.com
PLAUSIBLE_SCRIPT_URL=https://plausible.io/js/script.js

# Umami Analytics (self-hosted)
UMAMI_WEBSITE_ID=your-umami-website-id
UMAMI_SCRIPT_URL=https://umami.is/script.js

# ===========================================
# Error Tracking & Monitoring
# ===========================================
# Sentry Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# ===========================================
# Payment & Stripe
# ===========================================
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret

# ===========================================
# Email & Notifications
# ===========================================
# SendGrid Configuration
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@your-domain.com

# ===========================================
# CDN & Storage
# ===========================================
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary Configuration (image optimization)
CLOUDINARY_CLOUD_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# ===========================================
# Search & Indexing
# ===========================================
# Algolia Search Configuration
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_SEARCH_KEY=your-algolia-search-key
ALGOLIA_ADMIN_KEY=your-algolia-admin-key

# ===========================================
# Performance & Monitoring
# ===========================================
# Vercel Analytics (if deployed on Vercel)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# SpeedCurve Monitoring
SPEEDCURVE_API_KEY=your-speedcurve-api-key

# ===========================================
# Feature Flags
# ===========================================
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_SENTRY_SESSION_REPLAY=false
ENABLE_HEATMAPS=false

# ===========================================
# Application Configuration
# ===========================================
APP_URL=https://your-domain.com
SUPPORT_EMAIL=support@your-domain.com
MAX_UPLOAD_SIZE=10
CACHE_DURATION=3600

# ===========================================
# Logging & Debugging
# ===========================================
LOG_LEVEL=error
DEBUG=false

# ===========================================
# Development Override
# ===========================================
# For local development, you can override with:
# NODE_ENV=development
# CORS_ORIGIN=http://localhost:5173
# LOG_LEVEL=info
